    <!--redirections via JS navigations hors du site et ouverture dans de nouveaux onglets  -->
@code {


    private async Task RedirectFront()
    {

        await JS.InvokeVoidAsync("open", "https://github.com/pyrofir/CV-front", "_blank");

    }

    private async Task RedirectBack()
    {

        await JS.InvokeVoidAsync("open", "https://github.com/pyrofir/CV-back", "_blank");

    }

    private async Task RedirectDatabase()
    {

        await JS.InvokeVoidAsync("open", "https://github.com/pyrofir/CV-db", "_blank");

    }

    private async Task RedirectCloud()
    {

        await JS.InvokeVoidAsync("open", "https://github.com/pyrofir/CV", "_blank");

    }

    async Task OpenCV()
    {
        await JS.InvokeVoidAsync("open", "fichiers/CV Samuel ISRAEL.pdf", "_blank");
    }

    async Task OpenlettreDeRecommandation()
    {
        await JS.InvokeVoidAsync("open", "fichiers/Lettre de recommandation.pdf", "_blank");
    }

}